<!-- Sticky CTA -->
<div class="container-fluid sticky-cta m-0 p-0 py-1 py-md-2">

  <!-- Desktop -->
  <div class="container">
    <div class="row">
      <div class="col d-flex justify-content-start ">
        <p class="display7 d7-truncate2 d-inline-block my-auto mr-auto pr-1 bold sticky-title">
          <a class="top" href="#">{{{ eventHero.heroTitle }}}</a>
        </p>

        <a href="#" class="share share--facebook my-auto mr-5 ml-3 d-inline-block" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" title=" 
					<div class='addthis_toolbox bg-gray-dark'>
							<a class='addthis_button_facebook'><img src='{{ imagePath }}facebook-white.svg' alt='Share to Facebook' height='28' width='28'  ></a>
							<a class='addthis_button_linkedin px-2'><img src='{{ imagePath }}linkedIn-white.svg' alt='Share to LinkedIn' height='28' width='28' ></a>
							<a class='addthis_button_twitter'><img src='{{ imagePath }}twitter-white.svg' alt='Share to Twitter' height='28' width='28' ></a>
					</div>
				"></a>
        <a href="#" class="share share--save my-auto mr-0 d-inline-block hidden-sm-down" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" title="
					<div class='bg-gray-dark p-2'>
						<a href='#' target='_self' class='light'>Log In to Save</a>
					</div>
				"></a>

        <a href="#" class="share share--save my-auto mr-0 d-inline-block hidden-md-up" data-toggle="popover" data-trigger="focus" data-placement="left" data-html="true" title="
					<div class='bg-gray-dark p-2'>
						<a href='#' target='_self' class='light'>Log In to Save</a>
					</div>
				"></a>

      </div>
    </div>
  </div>
</div>