<div class="py-3 py-md-4">
  <div class="row text-center text-md-left mb-3">
    <div class="col-12 col-md-3 col-lg-2">
      <img src="{{ author.imgSrc }}" class="mb-3 mb-md-0 img-fluid profile-img-alt" />
    </div>
    <div class="col-12 col-md-9 col-lg-10">
      <p class="display6 bold">{{ author.name }}</p>
      <p class="display8 secondary">{{ author.position }}<br />{{ author.company }}</p>
    </div>
  </div>
  <p class="display8 secondary">{{ author.text }} </p>
  <p class="display8 share-bar share-bar--small d-flex flex-column flex-md-row text-center text-md-left">
    <span class="my-2">
      <span class="secondary">{{ author.emailText }}</span> <a href="mailto:{{ author.emailAddress }}" class="accent">{{ author.emailAddress }}</a>
    </span>
    <span class="my-2 nowrap">
      <a href="#"><img class="d-inline-block mx-3 share-bar__icon" src="{{ share.facebookSrc }}" alt="Facebook Icon"></a>
      <a href="#"><img class="d-inline-block mx-3 share-bar__icon" src="{{ share.twitterSrc }}" alt="Twitter Icon"></a>
      <a href="#"><img class="d-inline-block mx-3 share-bar__icon" src="{{ share.linkedinSrc }}" alt="LinkedIn Icon"></a>
    </span>
  </p>
</div>