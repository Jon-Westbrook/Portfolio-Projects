<div class="container py-5 py-md-6 py-lg-7 callouts-attending">

  <div class="row">
    <div class="col">
      {{# calloutsAttending.moduleTitle }}
        <h3 class="display5 bold attending mr-md-3">{{ calloutsAttending.moduleTitle  }}</h3>{{/ calloutsAttending.moduleTitle }}
        <p class="display7 secondary mb-2 attending">{{ calloutsAttending.attendanceCount }}</p>
    </div>
  </div>

  <!-- First Row -->
  <div class="row">

    <div class="col-md-6 col-lg-4">
      <div class="row mt-5">
        <div class="col-2 m-0 py-0">
          <img src="{{ cards.memberCardImg }}" alt="Member Avatar" class="m-0 p-0 card-img-right">
        </div>
        <div class="col-10 m-0 py-0">
          <div class="card-block m-0 py-0 pl-2 pl-md-3 pl-lg-4 pr-0">
            <a href="#">
              <h3 class="card-title display6 bold m-0 p-0">{{ cards.memberName }}</h3>
            </a>
            <p class="display8 secondary m-0 p-0">{{ cards.memberTitle }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-4">
      <div class="row mt-5">
        <div class="col-2 m-0 py-0">
          <img src="{{ cards.memberCardImg }}" alt="Member Avatar" class="m-0 p-0 card-img-right">
        </div>
        <div class="col-10 m-0 py-0">
          <div class="card-block m-0 py-0 pl-2 pl-md-3 pl-lg-4 pr-0">
            <a href="#">
              <h3 class="card-title display6 bold m-0 p-0">{{ cards.memberName }}</h3>
            </a>
            <p class="display8 secondary m-0 p-0">{{ cards.memberTitle }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-4">
      <div class="row mt-5">
        <div class="col-2 m-0 py-0">
          <img src="{{ cards.memberCardImg }}" alt="Member Avatar" class="m-0 p-0 card-img-right">
        </div>
        <div class="col-10 m-0 py-0">
          <div class="card-block m-0 py-0 pl-2 pl-md-3 pl-lg-4 pr-0">
            <a href="#">
              <h3 class="card-title display6 bold m-0 p-0">{{ cards.memberName }}</h3>
            </a>
            <p class="display8 secondary m-0 p-0">{{ cards.memberTitle }}</p>
          </div>
        </div>
      </div>
    </div>

  </div>

  {{# calloutsAttending.ctaCopy }}
    <div class="row">
      <button type="button" class="btn btn-outline-primary d-block mx-auto mt-5 mt-md-6 px-6">{{ calloutsAttending.ctaCopy }}</button>
    </div>
    {{/ calloutsAttending.ctaCopy }}

</div>