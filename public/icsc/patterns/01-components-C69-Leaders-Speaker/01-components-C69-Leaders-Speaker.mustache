{{#leaders}}
  <div class="row mb-5">
    <div class="col-sm-3 col-md-4 col-lg-3">
      <img src="{{imgSrc}}" class="profile-img-leader mx-auto mb-3" />
    </div>
    <div class="col">
      <div class="mb-4">
        <h2 class="display6 bold">{{ title }}</h2>
        <p class="display7 secondary">{{ subtitle }}</p>
        <p class="display8">{{ text }}</p>
      </div>
      <div>
        <a href="#" class="mr-2"><img src="{{ imagePath }}icon-linkedin.svg" /></a>
        <a href="#" class="mr-2"><img src="{{ imagePath }}icon-twitter.svg" /></a>
      </div>
    </div>
  </div>
{{/leaders}}