<div class="container home-module pl-lg-0 mt-8">
  <div class="line my-0"></div>
  <div class="row data-sales">
    <div class="col-md-2 align-self-center my-5">
      <div class="ml-md-7 display6 uppercase bold secondary-1">Sales</div>
    </div>
    <div class="col-md-7 pr-md-0">
      <div class="sales-type d-flex flex-column flex-md-row">
        {{#home.salesType}}
        <div class="col pl-4 {{class}}">
          <div class="col-inner my-2 d-flex justify-content-between flex-row flex-md-column w-100">
            <div class="label align-self-center align-self-md-start">{{label}}</div>
            <div class="display2 mt-3">{{number}}</div>
          </div>
        </div>
        {{/home.salesType}}
      </div>
    </div>
    <div class="col-md-3 align-self-center text-center">
      <button type="button" class="btn btn-secondary w-sm-100 sales-button">View Sales</button>
    </div>
  </div>
</div>
