<div class="row pt-6 pt-md-8">
  <div class="col-md-10 offset-md-1 pb-4">
    <h2 class="secondary-6 mb-6 mb-md-8">{{ heading }}</h2>

    <table id="invoice-edit-table" class="mb-0 display nowrap">
      <thead class="bg-secondary-1 primary-3 label uppercase">
        <tr>
          <th><span class="pl-3">Seq.</span></th>
          <th><span class="pl-1">Item Name</span></th>
          <th><span class="pl-3">Quantity</span></th>
          <th><span class="pl-3">Price</span></th>
          <th><span class="pl-3">Total</span></th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
    </table>
    <a href="#" class="small bold d-inline-block mt-3 add-additional"><span class="add-additional-icon"></span> Add
      additional line</a>
  </div>
</div>

<div class="row pb-6">
  <div class="col-md-6 offset-md-1 pb-4">
    &nbsp;
  </div>
  <div class="col-md-4">
    <div class="row mx-0 px-0">
      <div class="w-100 rule thin-gray">&nbsp;</div>
      <div class="col-4 col-md-5 d-flex align-items-center">
        <p class="label my-3">Discount</p>
      </div>
      <div class="col-6 d-flex align-items-center">
        <p class="gray my-3">XX%</p>
      </div>
      <div class="w-100 rule thin-gray">&nbsp;</div>
    </div>
    <div class="row mx-0 px-0">
      <div class="col-4 col-md-5 d-flex align-items-center">
        <p class="label my-3">Subtotal</p>
      </div>
      <div class="col-6 d-flex align-items-center">
        <p class="gray my-3">$00.00</p>
      </div>
    </div>
    <div class="row mx-0 px-0">
      <div class="col-4 col-md-5 d-flex align-items-center">
        <p class="label my-3">Tax</p>
      </div>
      <div class="col-6 d-flex align-items-center">
        <p class="gray my-3">$00.00</p>
      </div>
    </div>
    <div class="row mx-0 px-0">
      <div class="col-4 col-md-5 d-flex align-items-center">
        <p class="label my-3">Total</p>
      </div>
      <div class="col-6 d-flex align-items-center">
        <p class="gray my-3">$00.00</p>
      </div>
    </div>
  </div>
</div>

