<div class="form-row">
  <div class="form-group col-md-6">
    <label for="amountOwed" class="primary-2">Amount Owed</label>
    <div class="dollar-wrapper">
      <input type="text" class="form-control " id="amountOwed" value="" required>
    </div>
    <div class="invalid-feedback">
      Please provide a valid amount.
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-9">
    <div class="row mx-0 px-0">
      <div class="col-md-7 d-flex align-items-center pl-0">
        <p class="label mt-3 mb-0 mb-md-3">Subtotal</p>
      </div>
      <div class="col-md-3 d-flex align-items-center justify-content-start justify-content-md-end px-0">
        <span class="my-3 gray subTotal ">&ndash;</span>
      </div>
    </div>
    <div class="row mx-0 px-0">
      <div class="col-md-7 d-flex align-items-center pl-0">
        <p class="label mt-3 mb-0 mb-md-6">Credit Card Fee (3.5%)</p>
      </div>
      <div class="col-md-3 d-flex align-items-center justify-content-start justify-content-md-end px-0 mb-3 mb-md-0">
        <span class="my-3 gray taxRate ">&ndash;</span>
      </div>
    </div>
    <div class="row mx-0">
      <div class="col-md-10 px-0">
        <div class="rule thin-gray">&nbsp;</div>
      </div>
    </div>
    <div class="row mx-0 px-0">
      <div class="col-md-7 d-flex align-items-center pl-0">
        <p class="label mt-3 mb-0">Total Amount</p>
      </div>
      <div class="col-md-3 d-flex align-items-center justify-content-start justify-content-md-end px-0">
        <span class="mt-3 mb-0 total ">&ndash;</span>
      </div>
    </div>
  </div>
</div>
