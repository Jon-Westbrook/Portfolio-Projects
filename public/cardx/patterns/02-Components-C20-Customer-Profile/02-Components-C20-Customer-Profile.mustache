
<div class="row customer-profile ">
  <div class="col-md-10 offset-md-1">
    <a href="javascript:void(0);" class="edit secondary-4 small bold" data-toggle="modal" data-target="#customerEditProfile" data-backdrop="false"><span class="d-inline-block icon-pencil"></span>&nbsp;Edit</a>
    <h2 class="secondary-6 mt-8">{{ customer.heading-profile }}</h2>
    <div class="field-group mt-7">
      <p class="label mb-1">Name</p>
      <p>{{ customer.firstName }}&nbsp;{{ customer.lastName }}</p>
    </div>
    <div class="field-group mt-5">
      <p class="label mb-1">Company</p>
      <p>{{ customer.company }}</p>
    </div>
    <div class="field-group mt-5">
      <p class="label mb-1">Email</p>
      <p>{{ customer.email }}</p>
    </div>
    <div class="field-group mt-5">
      <p class="label mb-1">Phone Number</p>
      <p class="mb-0">{{ customer.phone }}</p>
    </div>
  </div>
</div>
