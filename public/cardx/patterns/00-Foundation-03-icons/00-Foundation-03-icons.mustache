<div class="bg-gray-lightest">
  <div class="container pb-5 pt-5 pt-md-7 px-6 px-lg-auto" style="max-width: 70rem;">
    <div class="row">
      <div class="col">

        <h1 class="display2 mt-5">Icons</h1>
				<p class="mt-3" style="max-width:30rem;">Icons can be used by adding <code>class="icon-[icon-name]"</code> to an element. The icon is applied as a background-image, so the element should be sized as a square.</p>
      </div>
    </div>
  </div>
</div>

<div class="container pt-4 pt-md-5 pb-9 px-6 px-lg-auto" style="max-width: 70rem;">

  <div class="row pt-5 pt-md-5">
    <div class="col">
      <h2 class="display5">Code Usage</h2>
      <p class="mt-3" style="max-width:30rem;">Colors are applied by adding <code>class="icon-[icon-name]"</code> to an element. The icon is applied as a background-image, so the element should be sized as a square.</p>
    </div>
  </div>

  <div class="rule thin-gray mt-6"></div>

	{{#icons}}

	<div class="row pb-4">
		<div class="col-12">
      <h2 class="display5 text-left w-100 mt-5">{{ displayName }}</h2>
      <p class="mt-3" style="max-width:30rem;"></p>
		</div>
	</div>

	<div class="row bg-{{ backgroundColor }} pt-3">

		{{#icons }}
		<div class="col-4 col-md-3 col-lg-2 my-3 text-center">
			<div class="icon-{{ . }}" style="height: 3rem; margin: 0 auto; width: 3rem;"></div>
			<p class="small mt-2 {{ textColor }}" style="max-width:30rem;">{{ . }}</p>
		</div>
		{{/icons}}
	</div>

	{{^last}}
		<div class="rule thin-gray mb-2"></div>
	{{/last}}
	
	{{/icons}}

</div>